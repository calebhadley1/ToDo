<%= form_with model: item do |form| %>
  <div>
    <%= form.label :title, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white" %><br>
    <%= form.text_field :title, class: "mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <% item.errors.full_messages_for(:title).each do |message| %>
      <div class="text-sm font-medium text-gray-900 dark:text-white"><%= message %></div>
    <% end %>
  <div>
    <%= form.label :description, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white" %><br>
    <%= form.text_area :description, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %><br>
    <% item.errors.full_messages_for(:description).each do |message| %>
      <div class="text-sm font-medium text-gray-900 dark:text-white"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :status, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white" %><br>
    <%= form.text_area :status, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %><br>
    <% item.errors.full_messages_for(:status).each do |message| %>
      <div class="text-sm font-medium text-gray-900 dark:text-white"><%= message %></div>
    <% end %>
  </div>
  <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
    <%= form.submit %>
  </button>
<% end %>
