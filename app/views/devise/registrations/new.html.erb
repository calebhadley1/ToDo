<article class="format lg:format-lg">
  <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
    </div>

    <div class="field">
      <%= f.label :password, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
      <% if @minimum_password_length %>
      <em class="mb-2 text-sm font-medium text-gray-900 dark:text-white">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
    </div>

    <div class="actions text-white mt-5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</article>